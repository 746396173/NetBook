<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/empty_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_bookrack_empty"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/empty_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/book_empty_hint"
        android:textColor="@color/gray"
        android:textSize="12sp"/>

    <com.xzhou.book.ui.view.DrawableButton
        android:id="@+id/add_book_btn"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/text_btn_bg"
        android:drawablePadding="5dp"
        android:drawableStart="@mipmap/ic_add_book"
        android:gravity="center"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:text="@string/to_add"
        android:textColor="@color/white"/>
</LinearLayout>
