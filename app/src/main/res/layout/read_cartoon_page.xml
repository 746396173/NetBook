<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <com.xzhou.book.widget.PhotoView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/load_error_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:drawablePadding="10dp"
        android:textColor="@color/white"
        android:drawableTop="@mipmap/picture"
        android:textSize="16sp"
        android:text="@string/pic_load_fail"
        tools:ignore="ContentDescription"/>

    <LinearLayout
        android:id="@+id/cartoon_bottom_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_cartoon_title_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="marquee"
            android:maxEms="6"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="RelativeOverlap"
            tools:text="第1话. xxxxxx"/>

        <TextView
            android:id="@+id/page_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="RelativeOverlap"
            tools:text="1/7"/>

        <TextView
            android:id="@+id/wifi_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="WiFi"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="HardcodedText,RelativeOverlap"
            tools:text="WiFi"/>

        <TextClock
            android:id="@+id/page_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:format24Hour="HH:mm"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="12:08"/>

        <TextView
            android:id="@+id/battery_view"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:layout_marginStart="10dp"
            android:background="@mipmap/icon_battary"
            android:gravity="center"
            android:paddingEnd="5dp"
            android:paddingStart="3dp"
            android:textColor="@color/black"
            android:textSize="10dp"
            tools:ignore="SpUsage"
            tools:text="98%"/>

    </LinearLayout>

</merge>