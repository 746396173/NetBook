<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/touch_bg"
                android:paddingBottom="@dimen/book_item_margin_v"
                android:paddingEnd="@dimen/book_item_margin_h"
                android:paddingStart="@dimen/book_item_margin_h"
                android:paddingTop="@dimen/book_item_margin_v">

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="45dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_cover_default"
        tools:ignore="ContentDescription"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/book_item_margin_h"
        android:layout_toEndOf="@id/book_image"
        android:layout_toStartOf="@id/book_checkbox"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/common_h1"
            android:textSize="16sp"
            tools:text="武侠世界自由行"/>

        <TextView
            android:id="@+id/book_subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/common_h2"
            android:textSize="13sp"
            tools:text="13小时前:灌口二郎神显圣 第1037章..."/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/book_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/book_updated_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/reader_topic_dot"
        android:visibility="invisible"
        tools:ignore="ContentDescription"
        tools:visibility="visible"/>

</RelativeLayout>