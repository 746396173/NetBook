<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/empty_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_bookrack_empty"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/empty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/book_empty_hint"
            android:textColor="@color/gray"
            android:textSize="12sp"/>

        <com.xzhou.book.widget.DrawableButton
            android:id="@+id/add_book_btn"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_add_book_btn"
            android:drawablePadding="5dp"
            android:drawableStart="@mipmap/ic_add_book"
            android:text="@string/to_add"
            android:gravity="center_vertical"
            android:textColor="@color/white"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
    </LinearLayout>
</FrameLayout>
