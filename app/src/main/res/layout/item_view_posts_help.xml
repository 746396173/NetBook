<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/touch_bg"
                android:paddingStart="@dimen/book_detail_margin"
                android:paddingTop="15dp"
                android:paddingEnd="@dimen/book_detail_margin"
                android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/book_help_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/avatar_default"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/author_type_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:src="@mipmap/user_avatar_verify_official"
        android:visibility="gone"
        tools:ignore="ContentDescription"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/book_help_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/common_h3"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:ignore="RelativeOverlap"
        tools:text="前天"/>

    <TextView
        android:id="@+id/book_help_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/book_help_img"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/light_coffee"
        android:textSize="13sp"
        tools:text="我就是静静  lv.10"/>

    <TextView
        android:id="@+id/book_help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_help_author"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/book_help_img"
        android:ellipsize="end"
        android:maxLines="4"
        android:textColor="@color/common_h1"
        tools:text="越到后面越索然无味"/>

    <TextView
        android:id="@+id/book_help_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_help_title"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/book_help_img"
        android:drawableStart="@mipmap/ic_message"
        android:drawablePadding="3dp"
        android:textColor="@color/common_h3"
        android:textSize="13sp"
        tools:text="308"/>

    <TextView
        android:id="@+id/view_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_hot_posts"
        android:drawableStart="@mipmap/ic_topic_hot"
        android:drawablePadding="2dp"
        android:paddingStart="4dp"
        android:paddingTop="1.5dp"
        android:paddingEnd="4dp"
        android:paddingBottom="1.5dp"
        android:text="@string/discussion_hot"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone"
        tools:ignore="RelativeOverlap"
        tools:visibility="gone"/>

    <TextView
        android:id="@+id/view_distillate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_distillate_posts"
        android:drawableStart="@mipmap/ic_topic_distillate"
        android:drawablePadding="2dp"
        android:paddingStart="4dp"
        android:paddingTop="1.5dp"
        android:paddingEnd="4dp"
        android:paddingBottom="1.5dp"
        android:text="@string/distillate_true"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone"
        tools:ignore="RelativeOverlap"
        tools:visibility="visible"/>
</RelativeLayout>