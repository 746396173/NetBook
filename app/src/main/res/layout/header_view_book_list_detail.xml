<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/common_bg"
              android:elevation="1dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/book_list_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/book_item_margin_h"
        android:layout_marginStart="@dimen/book_item_margin_h"
        android:layout_marginTop="20dp"
        android:textColor="@color/common_h1"
        android:textSize="20sp"
        tools:text="精致的肥宅快乐书"/>

    <TextView
        android:id="@+id/book_list_detail_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/book_item_margin_h"
        android:layout_marginStart="@dimen/book_item_margin_h"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.3"
        android:maxLines="5"
        android:textColor="@color/common_h2"
        android:textSize="13sp"
        tools:text="统统都是大神的书，简直赚到了，看书不用愁没钱了！"/>

    <ImageView
        android:id="@+id/book_list_detail_desc_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/book_item_margin_h"
        android:layout_marginTop="-5dp"
        android:src="@mipmap/ugcbook_detail_more"
        tools:ignore="ContentDescription"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/book_item_margin_h"
        android:layout_marginEnd="@dimen/book_item_margin_h"
        android:layout_marginStart="@dimen/book_item_margin_h"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/book_list_detail_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/avatar_default"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/book_detail_create_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/book_item_margin_h"
            android:layout_toEndOf="@id/book_list_detail_image"
            android:text="@string/book_list_detail_by"
            android:textColor="@color/common_h2"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/book_detail_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/book_detail_create_by"
            android:layout_toStartOf="@id/book_list_detail_share_btn"
            android:background="@drawable/bg_author_text"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/orange"
            android:textSize="13sp"
            tools:text="清酒"/>

        <TextView
            android:id="@+id/book_list_detail_share_btn"
            style="@style/RoundBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableStart="@mipmap/ugcbook_detail_share"
            android:text="@string/share"/>
    </RelativeLayout>
</LinearLayout>