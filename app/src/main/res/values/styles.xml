<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_bg</item>
    </style>

    <style name="NavigationBarTheme" parent="AppTheme">
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="ReadTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="colorPrimary">@color/reader_menu_bg_color</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="titleTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/book_read_top_text</item>
    </style>

    <style name="SettingTheme" parent="NavigationBarTheme">
        <item name="android:windowBackground">@color/light_white</item>
    </style>

    <style name="DialogTheme" parent="AlertDialog.AppCompat">
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="CommonTitleTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainTitleTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MenuText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="dropDownStyle" parent="android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/touch_bg</item>
        <item name="android:divider">@color/common_divider_narrow</item>
        <item name="android:dividerHeight">0.2dp</item>
    </style>

    <style name="Theme.ToolBar.Menu" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/common_bg</item>
        <item name="android:textColor">@color/common_h1</item>
        <item name="android:textSize">16dp</item>
        <item name="android:actionMenuTextAppearance">@style/MenuText</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="android:dropDownListViewStyle">@style/dropDownStyle</item>
        <item name="dropDownListViewStyle">@style/dropDownStyle</item>
    </style>

    <style name="TagGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="atg_isAppendMode">false</item>
        <item name="atg_inputHint">""</item>
        <item name="atg_borderColor">#49C120</item>
        <item name="atg_textColor">#49C120</item>
        <item name="atg_backgroundColor">#FFFFFF</item>
        <item name="atg_dashBorderColor">#AAAAAA</item>
        <item name="atg_inputHintColor">#80000000</item>
        <item name="atg_inputTextColor">#DE000000</item>
        <item name="atg_checkedBorderColor">#49C120</item>
        <item name="atg_checkedTextColor">#FFFFFF</item>
        <item name="atg_checkedMarkerColor">#FFFFFF</item>
        <item name="atg_checkedBackgroundColor">#49C120</item>
        <item name="atg_pressedBackgroundColor">#EDEDED</item>
        <item name="atg_borderStrokeWidth">0.5dp</item>
        <item name="atg_textSize">14sp</item>
        <item name="atg_horizontalSpacing">12dp</item>
        <item name="atg_verticalSpacing">10dp</item>
        <item name="atg_horizontalPadding">12dp</item>
        <item name="atg_verticalPadding">6dp</item>
    </style>

    <style name="BookDetailBtn">
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_book_detail_btn</item>
    </style>

    <style name="RoundBtn">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">17dp</item>
        <item name="android:paddingEnd">17dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/round_btn_text_color</item>
        <item name="android:background">@drawable/sel_round_btn</item>
        <item name="android:state_activated">false</item>
    </style>

    <style name="ReadSettingText">
        <item name="android:textColor">@color/book_read_bottom_text</item>
        <item name="android:textSize">13dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="SettingLabel">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/common_h3</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">24dp</item>
    </style>

    <style name="SettingItem">
        <item name="android:background">@drawable/touch_bg</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="SettingItemSwitch">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/touch_bg</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/common_h1</item>
    </style>

    <style name="DialogBtnText">
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
