<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="item_count" format="integer"/>
    <attr name="text_color_normal" format="color"/>
    <attr name="text_color_hightlight" format="color"/>
    <attr name="text_size" format="dimension"/>
    <attr name="indicator_color" format="color"/>
    <attr name="indicator_src" format="reference"/>
    <attr name="indicator_style">
        <enum name="bitmap" value="0"/>
        <enum name="line" value="1"/>
        <enum name="square" value="2"/>
        <enum name="triangle" value="3"/>
    </attr>

    <!-- RVPIndicator -->
    <declare-styleable name="Indicator">
        <attr name="item_count"/>
        <attr name="text_color_normal"/>
        <attr name="text_color_hightlight"/>
        <attr name="text_size"/>
        <attr name="indicator_color"/>
        <attr name="indicator_src"/>
        <attr name="indicator_style"/>
    </declare-styleable>

    <declare-styleable name="TagGroup">
        <attr name="atg_isAppendMode" format="boolean"/>
        <attr name="atg_inputHint" format="string"/>

        <attr name="atg_borderColor" format="color"/>
        <attr name="atg_textColor" format="color"/>
        <attr name="atg_backgroundColor" format="color"/>

        <attr name="atg_dashBorderColor" format="color"/>
        <attr name="atg_inputHintColor" format="color"/>
        <attr name="atg_inputTextColor" format="color"/>

        <attr name="atg_checkedBorderColor" format="color"/>
        <attr name="atg_checkedTextColor" format="color"/>
        <attr name="atg_checkedMarkerColor" format="color"/>
        <attr name="atg_checkedBackgroundColor" format="color"/>
        <attr name="atg_pressedBackgroundColor" format="color"/>
        <attr name="atg_borderStrokeWidth" format="dimension"/>
        <attr name="atg_textSize" format="dimension"/>
        <attr name="atg_horizontalSpacing" format="dimension"/>
        <attr name="atg_verticalSpacing" format="dimension"/>
        <attr name="atg_horizontalPadding" format="dimension"/>
        <attr name="atg_verticalPadding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="tagGroupStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RatingBar">
        <attr name="starCount" format="integer"/>
        <attr name="activeCount" format="integer"/>
        <attr name="starSize" format="dimension"/>
        <attr name="starPadding" format="dimension"/>
        <attr name="starSrc" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SwipeLayout">
        <attr name="right_id" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="line_count" format="integer|reference"/>
        <attr name="line_width" format="dimension|reference"/>
        <attr name="progress_start_color" format="color|reference"/>
        <attr name="progress_end_color" format="color|reference"/>
        <attr name="progress_text_color" format="color|reference"/>
        <attr name="progress_text_size" format="dimension|reference"/>
        <attr name="progress_stroke_width" format="dimension|reference"/>
        <attr name="progress_background_color" format="color|reference"/>
        <attr name="progress_start_degree" format="integer|reference"/>
        <attr name="drawBackgroundOutsideProgress" format="boolean|reference"/>

        <attr name="style">
            <enum name="line" value="0"/>
            <enum name="solid" value="1"/>
            <enum name="solid_line" value="2"/>
        </attr>

        <attr name="progress_shader">
            <enum name="linear" value="0"/>
            <enum name="radial" value="1"/>
            <enum name="sweep" value="2"/>
        </attr>

        <attr name="progress_stroke_cap">
            <enum name="butt" value="0"/>
            <enum name="round" value="1"/>
            <enum name="square" value="2"/>
        </attr>

    </declare-styleable>
</resources>